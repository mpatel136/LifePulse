<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".diet.HeartConditionExercises"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="416dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/heart_pulse_icon"
            tools:layout_editor_absoluteX="wrap_content"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/img_logo_txt"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/lifepulse_logo"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="79dp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/heart_condition_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="485dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>