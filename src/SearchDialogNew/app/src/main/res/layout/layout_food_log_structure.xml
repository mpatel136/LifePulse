<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/food_log_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="4dp"
    card_view:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDiary"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:src="@drawable/food_recipes"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtFoodDiaryName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Name"
                    android:layout_weight="0.7"
                    android:textSize="22sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtFoodDiaryDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Date: 2/2/2222"
                    android:textSize="15sp"
                    android:layout_weight="0.7"
                    android:textColor="@color/darker_red"/>

                <TextView
                    android:id="@+id/txtFoodDiaryGuiltLevel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Guilt Level: 4"
                    android:textSize="15sp"
                    android:layout_weight="0.7"
                    android:textColor="@color/darker_red"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtFoodDiaryDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="">

        </TextView>
    </LinearLayout>

</android.support.v7.widget.CardView>
