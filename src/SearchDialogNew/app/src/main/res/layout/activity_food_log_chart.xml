<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="412dp"
        android:layout_height="705dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:paddingTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_food1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:background="@color/light_blue"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"

                    app:srcCompat="@drawable/cobb_salad" />

                <TextView
                    android:id="@+id/foodTitle1"
                    android:layout_width="411dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="105dp"
                    android:paddingTop="45dp"
                    android:text="Title" />

                <TextView
                    android:id="@+id/txt_calorie1"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:paddingLeft="100dp"
                    android:paddingTop="75dp"
                    android:gravity="center_horizontal"
                    android:text="Calorie" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_blue">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"

                    app:srcCompat="@drawable/cobb_salad" />

                <TextView
                    android:id="@+id/foodTitle2"
                    android:layout_width="411dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="105dp"
                    android:paddingTop="45dp"
                    android:text="Title" />

                <TextView
                    android:id="@+id/txt_calorie2"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:paddingLeft="100dp"
                    android:paddingTop="75dp"
                    android:gravity="center_horizontal"
                    android:text="Calorie" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_blue">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"

                    app:srcCompat="@drawable/cobb_salad" />

                <TextView
                    android:id="@+id/foodTitle3"
                    android:layout_width="411dp"
