<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RecipeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="323dp">

                <TextView
                    android:id="@+id/txt_recipe_title"
                    android:layout_width="401dp"
                    android:layout_height="42dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <ImageView
                    android:id="@+id/img_your_recipe"
                    android:layout_width="match_parent"
                    android:layout_height="253dp"
                    android:layout_alignTop="@+id/txt_recipe_title"
                    android:layout_marginTop="63dp"
                    android:src="@drawable/cobb_salad" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:text="@string/description" />

            <TextView
                android:id="@+id/txt_ingredients_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingredients"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txt_list_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/txt_steps_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/steps"
                android:textSize="24dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/txt_list_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>